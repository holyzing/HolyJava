<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:mvc="http://www.springframework.org/schema/mvc"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:aop="http://www.springframework.org/schema/aop" xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd 
		http://www.springframework.org/schema/mvc 
		http://www.springframework.org/schema/mvc/spring-mvc-3.2.xsd 
		http://www.springframework.org/schema/context 
		http://www.springframework.org/schema/context/spring-context-3.2.xsd 
		http://www.springframework.org/schema/aop 
		http://www.springframework.org/schema/aop/spring-aop-3.2.xsd 
		http://www.springframework.org/schema/tx 
		http://www.springframework.org/schema/tx/spring-tx-3.2.xsd ">
	<!-- 注解扫描位置 -->
	<context:component-scan base-package="com.holy.controller"></context:component-scan>
	<!-- 注解映射器,适配器,以及序列化,以及一些参数的封装 -->
	<mvc:annotation-driven/>
	<!-- MVC对多视图的支持  mvc集成了对json和xml的视图支持,对于pdf等视图的支持需要导入相应的jar包
		negotiate  英 [nɪ'gəʊʃɪeɪt]        美 [nɪ'ɡoʃɪet]
				   vt. 谈判，商议；转让；越过  vi. 谈判，交涉
	-->
	<bean class="org.springframework.web.servlet.view.ContentNegotiatingViewResolver">
		<property name="contentNegotiationManager">
			<bean class="org.springframework.web.accept.ContentNegotiationManagerFactoryBean">
				<property name="mediaTypes">
					<map>
						<entry key="json" value="application/json"></entry>
						<entry key="xml" value="application/xml"></entry>
					</map>
				</property>
			</bean>
		</property>
		<!-- 指定默认视图 -->
		<property name="defaultViews">
			<list>
				 <!-- 对josn格式视图支持 : spring 4.3版本中去除了
				      MappingJacksonJsonView只有MappingJackson2JsonView,
				 	  在MappingJacksonJsonView中,
				 	  	import org.codehaus.jackson.JsonGenerator;
				 	  在MappingJackson2JsonView中,
				 	  	import com.fasterxml.jackson.core.JsonGenerator;
				 	 
				 	  json视图返回需要导入jackon.jar,且jar的版本不能低于2.0吧！
				      1.9的Jackson 的包结构 是 org.codehaus.jackon 显然导进去也没有用
				      NoClassDefFoundError: com/fasterxml/jackson/core/JsonGenerator
				      
				      <mvc:annotation-driven>的序列化依赖的就是jackon，json视图也需要jackon.jar的支持！
				      在spring 3.x中requestMappingHandlerAdapter中像RequestMappingHandlerAdapter
				      注入MappingJacksonHttpMessageConverter，
				      在spring 4.x中 MappingJacksonHttpMessageConverter都没有了，快麻烦死了！。。。
				      				      
				-->
				<bean class="org.springframework.web.servlet.view.json.MappingJackson2JsonView"></bean>
				
				<!-- xml格式视图支持 -->
				<bean class="org.springframework.web.servlet.view.xml.MarshallingView">
					<constructor-arg>
						<!-- spring-oxm-4.3.9 -->
						<bean class="org.springframework.oxm.jaxb.Jaxb2Marshaller">
							<property name="classesToBeBound">
								<list>
									<value>com.holy.domain.User</value>
								</list>
							</property>
						</bean>
					</constructor-arg>
				</bean>
			</list>
		</property>
	</bean>
	<!-- 内置视图解析器 jsp视图 -->
	<bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/jsp/"></property>
		<property name="suffix" value=".jsp"></property>
	</bean>
</beans>